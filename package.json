{
	"name": "pocket-shader",
	"version": "0.3.1",
	"description": "A typescript package that makes it easy to render WebGL shaders in the browser.",
	"homepage": "https://pocket-shader.braebo.dev",
	"keywords": [
		"webgl",
		"shaders",
		"typescript",
		"javascript",
		"animation",
		"glsl",
		"jsr"
	],
	"license": "MIT",
	"author": "braebo",
	"type": "module",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"types": "./dist/pocket-shader.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/pocket-shader.d.ts",
			"default": "./dist/pocket-shader.js"
		}
	},
	"scripts": {
		"dev": "cd www && pnpm dev",
		"build": "tsup",
		"build:site": "cd www && pnpm build",
		"release": "pnpm changeset",
		"size": "cat dist/pocket-shader.min.js | pnpx brotli-size-cli",
		"a-sync-version": "changeset version && pnpx sync-version jsr.json",
		"lint": "publint"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.5",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"@types/bun": "^1.1.3",
		"@types/node": "^20.14.2",
		"changeset": "^0.2.6",
		"publint": "^0.2.8",
		"tsup": "^8.1.0",
		"typescript": "^5.4.5"
	}
}
